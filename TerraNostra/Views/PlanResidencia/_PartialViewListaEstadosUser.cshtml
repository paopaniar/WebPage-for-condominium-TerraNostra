@model IEnumerable<Infraestructure.Models.plan_residencia>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.residencia.numeroCasa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.residencia.usuario1.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha.Month)
        </th>
        <th>Por ver</th>


    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.residencia.numeroCasa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.residencia.usuario1.nombre)
            </td>
            <td>
                @switch (item.fecha.Month)
                {
                    case 1:
                        <text>Enero</text>
                        break;
                    case 2:
                        <text>Febrero</text>
                        break;
                    case 3:
                        <text>Marzo</text>
                        break;
                    case 4:
                        <text>Abril</text>
                        break;
                    case 5:
                        <text>Mayo</text>
                        break;
                    case 6:
                        <text>Junio</text>
                        break;
                    case 7:
                        <text>Julio</text>
                        break;
                    case 8:
                        <text>Agosto</text>
                        break;
                    case 9:
                        <text>Septiembre</text>
                        break;
                    case 10:
                        <text>Octubre</text>
                        break;
                    case 11:
                        <text>Noviembre</text>
                        break;
                    case 12:
                        <text>Diciembre</text>
                        break;
                    default:
                        <text>Mes no válido</text>
                        break;
                }
            </td>
            <td>
                @Html.ActionLink("Detalles", "Details", new { id = item.id })
            </td>
        </tr>
    }

</table>

