<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SMARTHOUSE</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="icon" href="~/Utils/imagenes/LogoSmartHouse-removebg-preview.png">
    @RenderSection("styles", required: false)

</head>
<body>
    @Html.Partial("_Menu")

    <div class="container body-content" style="background-color: ">
        @RenderBody()

        <hr />

        <footer>
            <p>&copy; @DateTime.Now.Year - SMARTHOUSE</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/sweetalert")
    @*@Scripts.Render("~/bundles/bootstrap")*@

    <script src="~/Scripts/bootstrap.bundle.min.js"></script>

    @RenderSection("scripts", required: false)

    @if (ViewBag.NotificationMessage != null)
    {
        <script>
            @Html.Raw(ViewBag.NotificationMessage)
        </script>
    }
</body>
</html>