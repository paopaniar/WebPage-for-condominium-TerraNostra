@model IEnumerable<Infraestructure.Models.areaComun>

@{
    ViewBag.Title = "Área Común";
}


<br />
<div class="col-lg-13">
    <div id="resultado" class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-3">
                @if (item.estado == 1)
                {
                    <div class="card border-white mb-3" style="max-width: 20rem;">
                        <center>  <img class="card-img-top" src="~/Utils/imagenes/reservaciones.png" alt="Card image cap" height="100px" style="max-width: 100px"></center>
                        <br />
                        <p class="card-text">
                            <i class="fa-solid fa-house"></i> <b>@Html.DisplayFor(modelItem => item.detalle)</b>
                        </p>
                        <p class="card-text">
                            <b>@Html.DisplayNameFor(model => model.disponibilidad):</b> @Html.DisplayFor(modelItem => item.disponibilidad)
                        </p>
                        <p class="card-text">
                            <b>@Html.DisplayNameFor(model => model.fechaDisponible):</b>  @Html.DisplayFor(modelItem => item.fechaDisponible)
                        </p>
                        <p class="card-text">
                            <b>@Html.DisplayNameFor(model => model.horaDisponible):</b>@Html.DisplayFor(modelItem => item.horaDisponible)
                        </p>
                        <p class="card-text">
                            <b>@Html.DisplayNameFor(model => model.estado):</b>
                            @if (item.estado == 1)
                            {
                                <text>Sin reservar</text>
                            }
                            else
                            { <text>Reservado</text>}
                        </p>

                        <a href="@Url.Action("Details", "areaComun", new { id = item.id })" class="btn btn-primary"><i class="fa-solid fa-circle-info"></i>Detalles</a>
                        <a href="@Url.Action("Edit", "areaComun", new { id = item.id })" class="btn btn-primary"><i class="fa fa-pencil" aria-hidden="true"></i>Reservar</a>
                        @*@Html.ActionLink("Details", "Details", new { id = item.IdLibro }) |*@

                    </div>
                }
            </div>
        }
    </div>
</div>
