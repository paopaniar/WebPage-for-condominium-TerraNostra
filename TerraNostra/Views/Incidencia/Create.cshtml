@model Infraestructure.Models.incidente

@{
    ViewBag.Title = "Create";
}



@using (Html.BeginForm("Save", "incidencia", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <center>
        <div class="form-horizontal">
            <br />
            <h4 style="font-family: Broadway">Crear incidente</h4>


            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="col">
                @Html.LabelFor(model => model.tipo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-lg-2 col-md-2 col-sm-6">
                    @Html.DropDownListFor(model => model.tipo,
                       (SelectList)ViewBag.tipos,
                       "Seleccione un tipo",
                       htmlAttributes: new { @class = "form-control", @id = "tipo" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.detalle, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.detalle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.detalle, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-outline-primary btn-sm">Guardar</button>
                </div>
            </div>
        </div>
    </center>
}

<hr />
<p>

    @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-outline-primary" })
</p>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $("#tipo").on("change", function () {
            Filtrar();
        });

    </script>
}
@if (ViewBag.NotificationMessage != null)
{
    <script>
        swal('@ViewBag.NotificationMessage.Title', '@ViewBag.NotificationMessage.Message', '@ViewBag.NotificationMessage.Type');
    </script>
}