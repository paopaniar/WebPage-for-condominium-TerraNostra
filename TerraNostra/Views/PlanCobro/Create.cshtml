@model Infraestructure.Models.plan_cobro

@{
    ViewBag.Title = "Plan";
}

<!-- Incluir a biblioteca do jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Incluir a biblioteca do jQuery UI -->
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>



@using (Html.BeginForm("Save", "PlanCobro", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-8">
                <div class="card bg-dark">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Crear Plan</h4>
                    </div>
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.detail, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.detail, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.detail, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(Model => Model.rubro_cobro, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.DropDownList("selectedRubros",
                               (MultiSelectList)ViewBag.idRubros,
                               htmlAttributes: new { @class = "form-control", multiple = "multiple" })

                            </div>
                        </div>



                        <div class="form-group">
                            @Html.LabelFor(model => model.datePlan, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.datePlan, new { htmlAttributes = new { @class = "form-control", @id = "datepicker" } })
                                @Html.ValidationMessageFor(model => model.datePlan, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="form-group row mb-0">
                            <div class="col-md-6 offset-md-3">
                                <button type="submit" class="btn btn-primary btn-sm">Guardar</button>

                                @Html.ActionLink("Regresar al listado", "Index", null, new { @class = "btn btn-outline-primary" })

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>

        var myDateTimePicker = document.getElementById("datepicker");
        myDateTimePicker.addEventListener("focus", function () {
            this.type = "datetime-local";
        });
        myDateTimePicker.addEventListener("blur", function () {
            this.type = "text";
        });
        myDateTimePicker.style.color = "green";

    </script>

}
