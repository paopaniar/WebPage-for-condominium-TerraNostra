@model IEnumerable<Infraestructure.Models.informacion>
@{
    ViewBag.Title = "Home Page";

}


<center>
    <h1>Terra Nostra</h1>
    <h4>Un lugar para tu hogar</h4>

    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-50" src="~/Utils/imagenes/casa.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-50" src="~/Utils/imagenes/edificio.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-50" src="~/Utils/imagenes/piscina.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <hr />

    <div class="row">

        <div class="card bg-light mb-3" style="max-width: 20rem; color:darkslategrey">
            <div class="card-header"><b>Noticias</b></div>
            @foreach (var item in Model)
            {
                <div class="card-body">

                    @if (item.tipo == 1)
                    {
                        <p class="card-text">@Html.DisplayFor(modelItem => item.detalle)</p>
                    }


                </div>
            }
        </div>&nbsp;

        <div class="card bg-light mb-3" style="max-width: 20rem; color:darkslategrey">
            <div class="card-header"><b>Actas</b></div>
            @foreach (var item in Model)
            {
                <div class="card-body">

                    @if (item.tipo == 2)
                    {
                        <p class="card-text">@Html.DisplayFor(modelItem => item.detalle)</p>
                    }


                </div>
            }
        </div>&nbsp;

        <div class="card bg-light mb-3" style="max-width: 20rem; color:darkslategrey">
            <div class="card-header"><b>Artículos</b></div>
            @foreach (var item in Model)
            {
                <div class="card-body">

                    @if (item.tipo == 3)
                    {
                        <p class="card-text">@Html.DisplayFor(modelItem => item.detalle)</p>
                    }


                </div>
            }
        </div>
    </div>
</center>
<hr />
<br />
